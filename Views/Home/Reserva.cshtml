@model ContactoReserva

<html>
<head>
  <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
<form asp-controller="Contacto" asp-action="Reserva">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputEmail4">Email</label>
        <input type="email" class="form-control" id="inputEmail4" placeholder="ejemplo gmail.com" >
      </div>  
    </div>

      <div class="form-group">
          <label for="inputAddress">Dirección</label>
          <input type="text" class="form-control" id="inputDirec1" placeholder="ejemplo Av.Flora tristan">
      </div>
      <div class="form-group">
          <label for="inputAddress2">Dirección 2 (Opcional)</label>
          <input type="text" class="form-control" id="inputDirec2" placeholder="ejemplo Apartamento,piso o estudio">
      </div>
      <div class="form-row">
          <div class="form-group col-md-6">
          <label for="inputCity">Ciudad</label>
          <input type="text" class="form-control" id="inputCiudad" placeholder="ejemplo Lima">
          </div>
      </div>

      <div class="form-row">
          <div class="form-group col-md-6">
          <label for="inputState">Tipo de Prueba</label>
          <select id="inputState" class="form-control">
              <option selected>Antigenos</option>
              <option>PCR</option>
              <option>TestRapido</option>
              <option>TMA</option>
              <option>CLIA</option>
          </select>
          </div>
      </div>    
      <div class="form-row">
          <div class="form-check">
          <input class="form-check-input" type="checkbox" id="gridCheck">
          <label class="form-check-label" for="gridCheck">
            Acepto los terminos y condiciones.
          </label>
          </div>
      </div>
      <button type="submit" class="btn btn-primary">Enviar Reserva</button>
    </div>
  </form>
  <h1 >@ViewData["Message"]</h1>  
</body>
<script src="~/js/site.js" asp-append-version="true"></script>
</html>

