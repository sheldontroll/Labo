                <img class="d-block w-100" src="~/imagenes/antigenos.jpeg" alt="antigenos">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/imagenes/clia.jpg" alt="clia">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/imagenes/pcr.jpg" alt="pcr">
            </div>
