@model Labo.Models.Reserva

<html>
<head>
  <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
  @{
    ViewData["Title"] = "Datos de la atención";
}

<h1>@ViewData["Title"]</h1>
<hr size=3>
  <form>    
    <div class="form-row">
      <div class="form-group col-md-6" style="margin: 0 auto;">
        <label for="fechaPrueba">Selecciona tu fecha de prueba</label>
        <input type="date" class="form-control" id="fechaPrueba">
      </div>
    </div> 
    <div class="form-row">
      <div class="form-group col-md-6" style="margin: 0 auto;">
        <label for="horaPrueba">Seleccionada tu horario de atención</label>
        <select id="horaPrueba" class="form-control">
            <option selected>8:00 am</option>
            <option>8:30 am</option>
            <option>9:00 am</option>
            <option>9:30 am</option>
            <option>10:00 am</option>
            <option>10:30 am</option>
            <option>11:00 am</option>
            <option>11:30 am</option>
            <option>12:00 pm</option>
            <option>12:30 pm</option>
            <option>13:00 pm</option>
            <option>14:30 pm</option>
            <option>15:00 pm</option>
            <option>15:30 pm</option>
            <option>16:00 pm</option>
            <option>16:30 pm</option>
            <option>17:00 pm</option>
            <option>17:30 pm</option>
            <option>18:00 pm</option>
            <option>18:30 pm</option>
        </select>
      </div>
    </div> 
    <div class="form-row">
      <div class="form-group col-md-6" style="margin: 0 auto;">
        <label for="Prueba">Selecciona tu tipo de prueba</label>
        <select asp-for="PruebaId" asp-items="ViewBag.DataPruebas" type="text" class="form-control"></select>        
      </div>
    </div>

    <br><br>
    <div style="text-align: center;">
      <button style="margin: 0 auto;" type="submit" class="btn btn-primary" asp-controller="Cliente" asp-action="ClienteIndex">Atras</button>
      <button style="margin: 0 auto;" type="submit" class="btn btn-primary" asp-controller="Cliente" asp-action="DatosCliente">Siguiente</button>
    </div>  
    
    
  </form>
  <h1 class="mensajeRegistrar">@ViewData["Message"]</h1>  
</body>
<footer>

</footer>

<script src="~/js/site.js" asp-append-version="true"></script>
</html>

