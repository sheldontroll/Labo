          <option value="Noche">Noche</option>
        </select>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6" style="margin: 0 auto;">
        <label for="Prueba">Selecciona tu tipo de prueba</label>
        <select asp-for="PruebaId" asp-items="ViewBag.DataPruebas" name="PruebaId" type="text" class="form-control"></select>  
