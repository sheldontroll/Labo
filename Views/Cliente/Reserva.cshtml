        <label asp-for="sedePrueba">Selecciona tu sede</label>
        <select asp-for="sedePrueba" class="form-control" name="sedePrueba">
          <option value="San Borja">San Borja</option>
          <option value="Surco">Surco</option>
          <option value="La Molina">La Molina</option>
          <option value="San Luis">San Luis</option>
        </select>
      </div>
    </div>
    <br><br>
    <div style="text-align: center;">
      <button style="margin: 0 auto;" type="submit" class="btn btn-primary" asp-controller="Cliente" asp-action="DatosCliente">Atras</button>
      <button style="margin: 0 auto;" type="submit" class="btn btn-primary">Siguiente</button>
    </div>

    
  </form>
  <h1 class="mensajeRegistrar">@ViewData["Message"]</h1>
</body>
<footer>

</footer>

<script src="~/js/site.js" asp-append-version="true"></script>

</html>
