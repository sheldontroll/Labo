@model List<OrdenMedica>


<h1>Lista de Clientes</h1>

<table class="table border">
    <tr class="text-center">
        <th class="text-center">Fecha</th>
        <th>Hora</th>
        <th>Sede</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr class="text-center">
            <td>@item.fechaPrueba</td>
            <td>@item.horaPrueba</td>
            <td>@item.sedePrueba</td>
        </tr>
    }

    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="4" class="text-center">No se encontraron reservas agendadas</td>
        </tr>
    }
</table>