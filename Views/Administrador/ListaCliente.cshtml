@model List<Cliente>


<h1>Lista de Clientes</h1>

<table class="table border">
    <tr>
        <th>Id</th>
        <th>Nombres</th>
        <th>Apellidos</th>
        <th>Documento</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Id</td>
            <td>@item.Id</td>             
            <td>@item.Id</td> 
        </tr>
    }
    @if (Model.Count == 0) {
        <tr>
            <td colspan="4" class="text-center">No se encontraron Clientes registradas</td>
        </tr>
    }
</table>
