@model List<Cliente>


<h1>Lista de Clientes</h1>

<table class="table border">
    <tr>
        <th>Id</th>
        <th class="text-center">Foto</th>
        <th>Nombres</th>
        <th>Apellidos</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td><img src="@item.Foto" alt="" class="img-thumbnail" style="max-width: 125px;max-height:75px;">
            </td>
            <td>@item.Nombre</td>
            <td>@item.Apellido</td>
            <td>

                <a href="/Administrador/ClienteInfo" action="/Administrador/ClienteInfo" method="post"><img
                    src="~/imagenes/vistaprevia.jpeg" alt="" style="width: 50px; height:50px;"></a>

            </td>
            <td>
                <form action="/Administrador/borrarCliente" method="post" class="d-inline-block">
                    <input type="hidden" name="ID" value="@item.Id" />
                    <button class="btn btn-danger">Borrar</button>
                </form>
            </td>
        </tr>
    }

    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="4" class="text-center">No se encontraron Clientes registradas</td>
        </tr>
    }
</table>
