@model List<Cliente>


<h1>Lista de Clientes</h1>

<table class="table border">
    <tr>
        <th>Id</th>
        <th>Foto</th>
        <th>Nombres</th>
        <th>Apellidos</th>
        <th>Documento</th>
    </tr>
    @foreach (var item in Model)
    {
            <tr>
                <td>@item.Id</td>
                <td><img src="@item.Foto" alt="" class="img-thumbnail"></td>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Documento</td>
                <td>
                    <form action="/Administrador/borrarCliente" method="post" class="d-inline-block">
                        <input type="hidden" name="ID" value="@item.Id" />
                        <button class="btn btn-danger">Borrar</button>
                    </form>
                </td>
            </tr>
    }

    @if (Model.Count == 0)
    {
            <tr>
                <td colspan="4" class="text-center">No se encontraron Clientes registradas</td>
            </tr>
    }
</table>
