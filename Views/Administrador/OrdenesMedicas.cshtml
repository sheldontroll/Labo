@model List<OMD>


<h1>Lista de Órdenes Médicas</h1>

<table class="table border">
    <tr>
        <th>Dni</th>
        <th>Nombres</th>
        <th>Apellidos</th>
        <th>Documento</th>
    </tr>
    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="4" class="text-center">No se encontraron Órdenes médicas registradas</td>
        </tr>
    }else {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.dni</td>
                <td>@item.nombre</td>
                <td>@item.apellidos</td>
                <td>@item.resultado</td>
            </tr>
        }
    }
    
</table>